<section class="main_content dashboard_part large_header_bg"> 
     <!--/ menu  -->
     <div class="main_content_iner overly_inner ">
         <div class="container-fluid p-0 ">
             <!-- page title  -->
             <div class="row">
                 <div class="col-12">
                     <div class="page_title_box d-flex flex-wrap align-items-center justify-content-between">
                         <div class="page_title_left d-flex align-items-center">
                             <h3 class="f_s_25 f_w_700 dark_text mr_30" >Books</h3>
                             <ol class="breadcrumb page_bradcam mb-0">
                                 <li class="breadcrumb-item"><a href="javascript:void(0);">All Records</a></li>
                             </ol>
                         </div>
                         <div class="page_title_right">
                             
                         </div>
                     </div>
                 </div>
             </div>
             <div class="row ">
                 <div class="col-xl-12 ">
                     <div class="white_card mb_30 card_height_100">
                         <div class="white_card_header">
                             <div class="row align-items-center justify-content-between flex-wrap">
                                 <div class="col-lg-4">
                                     <div class="main-title">
                                         <h3 class="m-0"></h3>
                                     </div>
                                 </div>
                                 <div class="col-lg-4 text-right d-flex justify-content-end">
                                 <%= search_form_for @q do |f| %>

                                  <div class="row flex-lg-row">
                                    <div class="col-lg-4">
                                      <%= f.search_field :title_cont, class: 'form-control', placeholder: 'title' %>
                                    </div>
                                    <div class="col-lg-4">
                                      <%= f.search_field :isbn_cont, class: 'form-control', placeholder: 'isbn' %>
                                    </div>
                                    <div class="col-lg-4">
                                      <%= f.submit "Search", class: 'form-control' %>
                                    </div>
                                  </div>
                                <% end %>
                                 </div>
                                 
                             </div>
                             <table class="table">
                              <thead>
                                <tr>
                                  <th><%= sort_link(@q, :title, 'Book title', default_order: :desc) %></th>
                                  <th>Isbn</th>
                                  <th>Author</th>
                                  <th>Number</th>
                                  <th>Condition</th>
                                  <th colspan="3"></th>
                                </tr>
                              </thead>

                              <tbody>
                                <% @books.each do |book| %>
                                  <tr>
                                    <td><%= book.title %></td>
                                    <td><%= book.isbn %></td>
                                    <td><%= book.author %></td>
                                    <td><%= book.number %></td>
                                    <td><%= book.condition %></td>
                                    <td><%= link_to 'Edit book', edit_book_path(book), class: 'btn btn-outline-primary' %></td>
                                    <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                            <br>

                            <%= link_to 'New Book', new_book_path, class: 'btn btn-primary'%>
                              </div>
                              </div>
                         </div>
                         <div class="white_card_body">
                             <div id="management_bar"></div>
                         </div>
                     </div>
                 </div>
                 </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
</section>




